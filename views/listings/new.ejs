<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row  mt-5">
    <div class="col-8 offset-2">
    <h1>Create a new Listing</h1>
    <br>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" style="font-size: 25px;">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Please enter short title</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter short description</div>
        </div>
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image url/link" type="text" class="form-control"
            />
        </div> -->

        <div class="mb-3">
            <label for="image" class="form-label">Upload listing image</label>
            <input name="listing[image]" type="file" class="form-control"
            />
            required
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control" required/>
            <div class="invalid-feedback">Please enter valid price</div>
            </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
            <div class="invalid-feedback">Country name should be correct</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Jaipur Rajasthan" type="text" class="form-control"
            required />
            <div class="invalid-feedback">location name should be correct
            </div>
        </div>
        
        <button class="btn btn-dark add-btn mt-5 mb-5">Add</button>
        
    </form>
    </div>
    </div>
</body>